<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.ui.addbook.AddBookController">
   <children>
      <VBox prefHeight="300.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextArea fx:id="title" prefHeight="19.0" prefWidth="489.0" promptText="Book Title">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </JFXTextArea>
            <JFXTextArea fx:id="id" prefHeight="36.0" prefWidth="489.0" promptText="Book ID">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextArea>
            <JFXTextArea fx:id="author" prefHeight="45.0" prefWidth="489.0" promptText="Book Author">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextArea>
            <JFXTextArea fx:id="publisher" prefHeight="28.0" prefWidth="489.0" promptText="Publisher">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextArea>
            <HBox prefHeight="0.0" prefWidth="320.0">
               <children>
                  <JFXButton fx:id="saveButton" onAction="#addBook" prefHeight="25.0" prefWidth="220.0" stylesheets="@addbook.css" text="Save">
                     <HBox.margin>
                        <Insets bottom="2.0" left="20.0" right="10.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="cancelButton" onAction="#cancelBook" prefHeight="25.0" prefWidth="220.0" stylesheets="@addbook.css" text="Cancel">
                     <HBox.margin>
                        <Insets bottom="2.0" left="10.0" right="10.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
